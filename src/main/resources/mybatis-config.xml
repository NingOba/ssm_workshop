<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--配置别名,可以在mapper.xml中使用-->
    <typeAliases>
        <!--方法一-->
        <typeAlias type="com.tkn.ssm.product.model.Product"
                   alias="product"></typeAlias>
        <!--定义Mapper中引⽤到的业务对象类的位置-->

        <!--方法二：可以放多个-->
        <!--<package name="com.hbxy.ssm.party.model" />-->
    </typeAliases>

    <!--配置Mapper的位置 -->
    <mappers>
        <mapper
                resource="com/tkn/ssm/product/mapper/ProductMapper.xml" />
        <!--可以放多个-->
        <!--<mapper
       resource="com/hbxy/ssm/user/mapper/XXXXMapper.xml" />-->
    </mappers>
</configuration>